{
  "manifest_version": 3,
  "name": "RR_pimper",
  "version": "1.2",
  "description": "Pimp RR by Dorian Gravier",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://events.raceresult.com/*"],
      "js": ["jszip.min.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["exportAllItems.js", "deleteAllItems.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "commands": {
    "trigger-click": {
      "suggested_key": { "default": "Ctrl+Y" },
      "description": "Click the divDockRight div"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
